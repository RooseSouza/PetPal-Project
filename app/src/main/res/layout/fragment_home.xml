<ScrollView android:id="@+id/rpxnxwnxyqi8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".HomeFragment"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cat_footprint_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="PetPal"
                android:textSize="24sp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_icon"
                android:background="@drawable/circle"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/r2z04kg7s8ty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/input_field_background"
            android:paddingVertical="19dp"
            android:paddingHorizontal="28dp"
            android:layout_marginBottom="46dp"
            android:layout_marginHorizontal="26dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rm5i2tm6i1hk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_search_24"
                android:scaleType="fitXY"
                />
            <EditText
                android:id="@+id/rx6z4flizwx"
                android:textColor="#49454F"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintColor"
                android:layout_width="wrap_content"
                android:hint="Search pets"
                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rrdkv5lw7g7i"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rcon3u6kzsrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="31dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/exploreTitle"
                android:textColor="#767676"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/Explore_pets"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="10dp" />

    </LinearLayout>
</ScrollView>
