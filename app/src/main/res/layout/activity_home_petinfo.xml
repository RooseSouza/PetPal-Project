<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePetinfoActivity"
    android:paddingBottom="35dp">">

    <ScrollView
        android:id="@+id/petScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="16dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/cat_footprint_logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="PetPal"
                    android:textSize="24sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backarrow_icon" />

                <TextView
                    android:id="@+id/petTitle"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Pet Details" />
            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Uploaded Picture"/>
            <ImageView
                android:id="@+id/petImageView"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Pet Image" />

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name of the Pet"/>
            <TextView
                android:id="@+id/petNameTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Age"/>
            <TextView
                android:id="@+id/ageTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Breed"/>
            <TextView
                android:id="@+id/breedTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Size"/>
            <TextView
                android:id="@+id/sizeTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gender"/>
            <TextView
                android:id="@+id/genderTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Description"/>
            <TextView
                android:id="@+id/descriptionTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Health Status"/>
            <TextView
                android:id="@+id/healthStatusTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Location"/>
            <TextView
                android:id="@+id/locationTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Is it a Street Pet?"/>
            <TextView
                android:id="@+id/isStreetTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Rescue Location"/>
            <TextView
                android:id="@+id/rescueLocationTextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:id="@+id/adoptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/buttonColor"
                android:text="Request Adoption" />





        </LinearLayout>
    </ScrollView>
</LinearLayout>
